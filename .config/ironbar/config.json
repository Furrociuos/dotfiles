{
  "monitors": {
    "eDP-1": {
        "position": "top",
        "height": 45,
        "start": [
        {
          "type": "clock",
            "format": "  %I:%M %p",
            "format_popup": "  %a, %d %b"
        },
        {
          "type": "focused",
          "truncate": {
            "mode": "end",
            "max_length": 50
          }
        }
      ],
        "center": [
        {
          "type": "workspaces"
        }
      ],
        "end": [
        {
          "type": "tray",
          "icon_size": 24
        },
        {
          "type": "volume",
          "format": "{icon} {percentage}%",
          "icons": {
            "volume_high": "",
            "volume_medium": "",
            "volume_low": "",
            "muted": ""
          }
        },
        {
          "type": "network_manager"
        },
        {
          "type": "upower",
          "format": "{percentage}%"
        },
        {
          "type": "notifications",
          "icons": {
            "closed_none": "",
            "closed_some": "",
            "closed_dnd": "",
            "open_none": "󰂚",
            "open_some": "󱅫",
            "open_dnd": "󰂛"
          }
        }
      ]
    },

    "HDMI-A-2": {
      "position": "top",
      "height": 45,
      "start": [
        {
          "type": "clock",
            "format": "  %I:%M %p",
            "format_popup": "  %a, %d %b"
        }
      ],
      "center": [
        {
          "type": "workspaces"
        }
      ],
      "end": [
        {
          "type": "music",
          "format": " {title} - {artist}",
          "truncate": {
            "mode": "end",
            "max_length": 50
          },
          "icons": {
            "play": "",
            "pause": ""
          }
        }
      ]
    }
  }
}




